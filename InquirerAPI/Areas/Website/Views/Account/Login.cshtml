@model LoginViewModel
@{
    Layout = "_Authorization";
    ViewBag.Title = "Вхід | InquirerAPI";
    ViewBag.Stylesheet = "login.css";
}
<div class="page">
    <div class="container shadowed">
        <form class="form" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="logo">InquirerAPI</div>
            <div class="title">Вхід</div>
            <div class="information">
                Немає аккаунту? Ви можете <a asp-action="Register">зареєструватися тут</a>.
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <label asp-for="Email">Логін:</label>
                <input asp-for="Email" />
                <div class="error">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row">
                <label asp-for="Password">Пароль:</label>
                <input asp-for="Password" />
                <div class="error">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="submit">
                <button type="submit">
                    <div class="icon">launch</div>
                    <div class="label">увійти</div>
                </button>
            </div>
        </form>
        <div class="social">
            <div class="title">Чи увійдіть через:</div>
            <div class="buttons">
                <a asp-action="ExternalLogin" asp-route-provider="Google">
                    <div class="item">
                        <div class="icon">fingerprint</div>
                        <div class="label">Google</div>
                    </div>
                </a>
                <a asp-action="ExternalLogin" asp-route-provider="Facebook">
                    <div class="item">
                        <div class="icon">fingerprint</div>
                        <div class="label">Facebook</div>
                    </div>
                </a>
                <a asp-action="ExternalLogin" asp-route-provider="Microsoft">
                    <div class="item">
                        <div class="icon">fingerprint</div>
                        <div class="label">Microsoft</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>