
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- meta -->
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" lang="uk" />
    <link href="~/images/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <!-- libraries -->
    <script src="~/vendor/vue/dist/vue.js"></script>
    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/vendor/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <!-- scripts -->
    <script src="~/js/_default.js" type="text/javascript"></script>
    @if (ViewBag.Scripts != null)
    {
        foreach (var script in ViewBag.Scripts)
        {
            <script src="~/js/@script" type="text/javascript"></script>
        }
    }
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,900&amp;subset=cyrillic-ext" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <!-- stylesheets -->
    <link href="~/css/_default.css" rel="stylesheet" type="text/css" />
    @if (ViewBag.Stylesheets != null)
    {
        foreach (var style in ViewBag.Stylesheets)
        {
            <link href="~/css/@style" rel="stylesheet" type="text/css" />
        }
    }
</head>
<body>
    <div id="page-root">
        <header class="shadowed">
            <div class="container">
                <div class="title">
                    <a asp-action="Index" asp-controller="Home">InquirerAPI</a>
                </div>
                <div class="spacer"></div>
                <a href="#">
                    <div class="label">{{ user.email }}</div>
                    <div class="icon">person</div>
                </a>
                <a href="#">
                    <div class="icon" title="Налаштування аккаунту" v-on:click="OnEditAccountClicked()">settings</div>
                </a>
                <a asp-action="Logout" asp-controller="Account" title="Вийти з аккаунту">
                    <div class="icon">exit_to_app</div>
                </a>
            </div>
        </header>

        <div class="page">
            @RenderBody()
        </div>

        <footer></footer>
    </div>
    <!-- vue components -->
    @if (ViewBag.Components != null)
    {
        <script>
            var events = new Vue();
        </script>
        foreach (VueComponent c in ViewBag.Components)
        {
            @Html.Component(c);
        }
        @RenderSection("vue");
    }
</body>
</html>
